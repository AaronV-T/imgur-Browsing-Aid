{
	"manifest_version": 2,

	"name": "imgur Browsing Aid",
	"description": "Provides additional features to improve the imgur browsing experience.",
	"version": "0.5.3",

	"background": { 
		"scripts": ["jquery-2.1.4.min.js", "background.js"],
		"persistent": false
	},
	"browser_action": {
	  "default_icon": {
		"19": "images/icon19.png",
		"38": "images/icon38.png"
	  },
	  "default_title": "imgur Browsing Aid",
	  "default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://imgur.com/*"],
			"js": ["jquery-2.1.4.min.js", "systemMessagesContent.js", "notificationsContent.js"]
		},
		{
			"matches": ["*://imgur.com/"],
			"js": ["frontPageContent.js"]
		},
		{
			"matches": ["*://*.imgur.com/gallery/*"],
			"js": ["imgurContent.js"]
		},
		{
			"matches": ["*://*.imgur.com/*/favorites/*"],
			"js": ["imgurContent.js"]
		},
		{
			"matches": ["*://*.imgur.com/a/*"],
			"js": ["imgurContent.js"]
		},
		{
			"matches": ["*://*.imgur.com/account/favorites"],
			"js": ["favoritesContent.js"]
		}		
	],
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon.png"
	},
	"options_page": "options.html",
	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	]


}
